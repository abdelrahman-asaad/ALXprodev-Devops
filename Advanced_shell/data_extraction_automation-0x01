#!/bin/bash

# استخراج البيانات باستخدام jq
NAME=$(jq -r '.name' data.json | sed 's/\b\(.\)/\u\1/')   # Capitalize first letter
HEIGHT=$(jq -r '.height' data.json)
WEIGHT=$(jq -r '.weight' data.json)
TYPE=$(jq -r '.types[0].type.name' data.json | sed 's/\b\(.\)/\u\1/')  # Capitalize

# تحويل الوحدات إذا مطلوب (height بالـ dm → m, weight بالـ hg → kg)
HEIGHT_METERS=$(awk "BEGIN {printf \"%.1f\", $HEIGHT/10}")
WEIGHT_KG=$(awk "BEGIN {printf \"%d\", $WEIGHT/10}")

# طباعة النتيجة بشكل human-readable
echo "$NAME is of type $TYPE, weighs ${WEIGHT_KG}kg, and is ${HEIGHT_METERS}m tall."
