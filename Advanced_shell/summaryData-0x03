#!/bin/bash

INPUT_DIR="pokemon_data"
OUTPUT_FILE="pokemon_report.csv"

# إنشاء ملف CSV ورأس الجدول
echo "Name,Height (m),Weight (kg)" > "$OUTPUT_FILE"

# قراءة جميع ملفات JSON في المجلد
for file in "$INPUT_DIR"/*.json; do
    name=$(jq -r '.name' "$file" | sed 's/\b\(.\)/\u\1/')       # Capitalize first letter
    height=$(jq -r '.height' "$file")
    weight=$(jq -r '.weight' "$file")

    # تحويل الوحدات: height من dm → m, weight من hg → kg
    formatted_height=$(awk "BEGIN {printf \"%.1f\", $height/10}")
    formatted_weight=$(awk "BEGIN {printf \"%.1f\", $weight/10}")

    # إضافة الصف إلى CSV
    echo "$name,$formatted_height,$formatted_weight" >> "$OUTPUT_FILE"
done

echo "CSV Report generated at: $OUTPUT_FILE"
echo
# عرض محتويات CSV
cat "$OUTPUT_FILE"
echo

# حساب المتوسطات باستخدام awk
avg_height=$(awk -F',' 'NR>1 {sum+=$2; count++} END {printf "%.2f", sum/count}' "$OUTPUT_FILE")
avg_weight=$(awk -F',' 'NR>1 {sum+=$3; count++} END {printf "%.2f", sum/count}' "$OUTPUT_FILE")

echo "Average Height: $avg_height m"
echo "Average Weight: $avg_weight kg"
